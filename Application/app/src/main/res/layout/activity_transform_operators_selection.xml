<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding">

    <Button
        android:id="@+id/btnFlatMapOperatorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flat_map_operator" />

    <Button
        android:id="@+id/btnSwitchMapOperatorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_map_operator" />

    <Button
        android:id="@+id/btnMaterializeOperatorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/materialize_operator" />


</LinearLayout>